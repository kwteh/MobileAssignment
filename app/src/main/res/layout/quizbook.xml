<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQuizBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Big Quiz Book"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgQuizBook"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:srcCompat="@drawable/quiz_book" />

            <TextView
                android:id="@+id/tvInfoQB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/InfoQB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQBDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/InfoDetailQB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQBPrice"
                android:layout_width="246dp"
                android:layout_height="51dp"
                android:text="Price Only RM59.00"
                android:textColor="@color/Red"
                android:textSize="24sp" />

            <Button
                android:id="@+id/BuyQB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#F3DA06"
                android:gravity="center"
                android:text="Buy Now !"
                android:textSize="34sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>