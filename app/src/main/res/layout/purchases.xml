<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchases :"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgAIA"
            android:layout_width="443dp"
            android:layout_height="239dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/smart_pen_2" />

        <TextView
            android:id="@+id/tvAIA"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:text="Scan Dictionary Pen"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgGreatEast"
            android:layout_width="match_parent"
            android:layout_height="312dp"
            app:srcCompat="@drawable/quiz_book" />

        <TextView
            android:id="@+id/tvGreatEast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="The Big Qiuz Book"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>